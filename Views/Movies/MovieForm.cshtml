@model Movie_Rental_Store.ViewModel.MoviesFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>


@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.ValidationSummary()//true, "Please fix the following errors."
    <div class="form-check mb-2">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-check mb-2">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0: d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>


    <div class="form-check mb-2">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genre, "Id", "Name"), "--Select Genre--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>

    <div class="form-check mb-2">
        @Html.LabelFor(m => m.NoInStock)
        @Html.TextBoxFor(m => m.NoInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NoInStock)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
