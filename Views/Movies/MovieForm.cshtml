@model Movie_Rental_Store.ViewModel.MoviesFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>


@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.ValidationSummary(true,"Please fix the following errors.")
    <div class="form-check mb-2">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-check mb-2">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>


    <div class="form-check mb-2">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "--Select Genre--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>

    <div class="form-check mb-2">
        @Html.LabelFor(m => m.Movie.NoInStock)
        @Html.TextBoxFor(m => m.Movie.NoInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NoInStock)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}


@section scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }